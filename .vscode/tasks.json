{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile",
            "type": "shell",
            "command": "/usr/local/texlive/2021/bin/x86_64-linux/pdflatex",
            "args": [
                "-jobname=Analyse1",
                "./source/main.tex"
            ]
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "rm",
            "args": [
                "*.aux",
                "*.log",
                "*.out"
            ],
            "dependsOn": [
                "compile"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
